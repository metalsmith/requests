{
  "name": "@metalsmith/requests",
  "version": "0.2.0",
  "description": "A metalsmith plugin to query API's and add the results to files and metadata",
  "keywords": [
    "requests",
    "fetch",
    "metalsmith-plugin",
    "metalsmith",
    "static-site"
  ],
  "source": "src/index.js",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "type": "module",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metalsmith/requests.git"
  },
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "author": "Kevin Van Lierde (https://webketje.com)",
  "license": "LGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/metalsmith/requests/issues"
  },
  "homepage": "https://github.com/metalsmith/requests#readme",
  "dependencies": {
    "debug": "^4.3.4",
    "dset": "^3.1.1",
    "httpie": "^1.1.2",
    "regexparam": "^2.0.1"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "metalsmith": "^2.4.2",
    "microbundle": "^0.15.1",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "release-it": "^15.3.0"
  },
  "peerDependencies": {
    "metalsmith": "^2.4.1"
  },
  "scripts": {
    "changelog": "auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "release-it .",
    "build": "microbundle --target node --no-sourcemap -f cjs,esm --strict",
    "pretest": "npm run build",
    "test": "nyc mocha"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
